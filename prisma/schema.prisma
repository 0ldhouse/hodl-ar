datasource db {
  provider     = "mongodb"
  url          = env("MONGODB_URI")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @map("_id")
  name      String?
  bio       String?
  email     String?  @unique
  github    String?  @unique
  twitter   String?  @unique
  nostr     String?  @unique
  discord   String?  @unique
  lud06     String?
  lud16     LNURL?
  lnbits    LNBits?
  relayIDs  String[] @db.ObjectId
  relays    Relay[]  @relation(fields: [relayIDs], references: [id])
  otTokenId String?  @db.ObjectId
  otToken   OTToken?
}

model LNBits {
  id        String  @id @map("_id")
  userId    String  @unique
  user      User    @relation(fields: [userId], references: [id])
  lndhubUrl String?
  adminKey  String
}

model LNURL {
  id             Int     @id @map("_id")
  user           User    @relation(fields: [userId], references: [id])
  userId         String  @unique
  tag            String
  callback       String?
  minSendable    Int
  maxSendable    Int
  metadata       String
  commentAllowed Int
  payerData      Json?
}

model Relay {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  name    String   @unique
  userIDs String[]
  users   User[]   @relation(fields: [userIDs], references: [id])
}

model OTToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  validUntil DateTime
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id])
}
