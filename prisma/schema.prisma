datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
}

model User {
  id            String    @id @map("_id")
  name          String?
  bio           String?
  email         String?   @unique
  github        String?   @unique
  twitter       String?   @unique
  nostr         String?   @unique
  discord       String?   @unique
  lnbitsAdmin   String?   @unique
  lnurlP        String?
}