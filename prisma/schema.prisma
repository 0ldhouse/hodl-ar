datasource db {
  provider     = "mongodb"
  url          = env("MONGODB_URI")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id @map("_id")
  name    String?
  bio     String?
  email   String? @unique
  github  String? @unique
  twitter String? @unique
  nostr   String? @unique
  discord String? @unique
  lud06   String?
  lud16   LNURL?
  lnbits  LNBits?
}

model LNBits {
  id       String @id @map("_id")
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id])
  adminKey String
}

model LNURL {
  id             Int     @id @map("_id")
  user           User    @relation(fields: [userId], references: [id])
  userId         String  @unique
  tag            String
  callback       String?
  minSendable    Int
  maxSendable    Int
  metadata       String
  commentAllowed Int
  payerData      Json?
}
